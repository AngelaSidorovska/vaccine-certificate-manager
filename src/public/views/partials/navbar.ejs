<nav class="nav-menu">
    <ul>
        <li class="<%= page === 'all-patients' ? 'active' : '' %>"><a href="/patients/?currentPage=1&pageSize=10">Сите
                пациенти</a></li>
        <li class="<%= page === 'new-patient' ? 'active' : '' %>"><a href="/patients/new">Додади нов пациент</a></li>
        <li class="<%= page === 'statistics' ? 'active' : '' %>"><a href="/patients/statistics">Статистика</a></li>
        <li class="<%= page === 'logs' ? 'active' : '' %>"><a href="/logs/?currentPage=1&pageSize=10">Историјат на
                валидации</a></li>
        <li><a href="/logout">Одјави се</a></li>
    </ul>
</nav>

<script>
  // Get all li elements
  const liElements = document.querySelectorAll('.nav-menu li');

  // Loop through each li element
  liElements.forEach(li => {
    // Add click event listener to each li element
    li.addEventListener('click', () => {
      // Find the nested a tag
      const aTag = li.querySelector('a');
      if (aTag) {
        // Trigger click event on the nested a tag
        aTag.click();
      }
    });
  });
</script>
